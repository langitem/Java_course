
public class swimmingPool {
	
	private int width;
	private int length;
	private int depth;
	
	// method to set width
	public void setWidth(int w) {
		width = w;
	}
	
	// method to set length
	public void setLength(int l) {
		length = l;
	}
	
	// method to set depth
	public void setDepth(int d) {
		depth = d;
	}
	
	// method to get width
	public int getWidth() {
		return width;
	}
	
	// method to get length
	public int getLength() {
		return length;
	}
	
	// method to get depth
	public int getDepth() {
		return depth;
	}

}
