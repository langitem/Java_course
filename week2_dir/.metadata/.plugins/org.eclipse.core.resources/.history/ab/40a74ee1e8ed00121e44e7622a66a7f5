
public class SwimmingPool {
	
	private int width;
	private int length;
	private int depth;
	private int volume;
	
	// method to set width
	public void setWidth(int w) {
		width = w;
	}
	
	// method to set length
	public void setLength(int l) {
		length = l;
	}
	
	// method to set depth
	public void setDepth(int d) {
		depth = d;
	}
	
	// method to set volume
	public int setVolume(int w, int l, int d) {
		volume = calculateVolume(w,l, d);
	}
	// method to get width
	public int getWidth() {
		return width;
	}
	
	// method to get length
	public int getLength() {
		return length;
	}
	
	// method to get depth
	public int getDepth() {
		return depth;
	}
	
	// method to get volume
	public int getVolume() {
		return volume;
	}
	
	// method to calculate volume
	public int calculateVolume(int w, int l, int d) {
		int vol = w * l * d * 1000;
		return vol;
	}
	
}
